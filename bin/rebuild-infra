#!/usr/bin/env bash

# Credits: https://gist.github.com/0atman/1a5133b842f929ba4c1e195ee67599d5

# A rebuild script that commits on a successful build
set -e

# cd to your config dir
pushd ~/infra-nix

git pull

echo "🔑 Updating SOPS data keys for all secrets…"
# rekursiv alle .enc-Dateien finden und bearbeiten
find secrets -type f -name '*.enc' | while read -r secret; do
  echo "  → updatekeys $secret"
  sops --config .sops.yaml updatekeys -y "$secret"
done

# nach Änderung an den .enc-Files committest du sie gleich mit:
git add -N secrets

# Early return if no changes were detected (thanks @singiamtel!)
if git diff --quiet '*.nix'; then
    echo "No changes detected, exiting."
    popd
    exit 0
fi

# Autoformat your nix files
alejandra . &>/dev/null \
  || ( alejandra . ; echo "formatting failed!" && exit 1)

# Shows your changes
git diff -U0 '*.nix'

echo "⏰ NixOS Rebuilding..."

# Initialize summary variable
summary="NixOS rebuild summary ($(date))"

for file in hosts/*.nix; do
  # Skip if the file is not a Nix file or if it is not the base file
  [[ "$(basename "$file")" == "base.nix" ]] && continue

  host=$(basename "$file" .nix)
  fqdn=$(basename "$file" .nix).uwu.tools
  echo "🏃 Rebuilding on host: $host"

  nixos-rebuild switch --target-host rob@$fqdn --flake ".#$host" --use-remote-sudo &>nixos-switch.log || (cat nixos-switch.log | grep --color error && exit 1)

  gen=$(ssh rob@$fqdn "nixos-rebuild list-generations | grep current" || echo "unknown generation")
  summary+="\n- $host: $gen"
done

# Get current generation metadata
echo -e "$summary"

# Commit all changes witih the generation metadata
git commit -am "$summary"

# Back to where you were
popd

# Notify all OK!
notify-send -e "Infra-Rebuild successful!" --icon=software-update-available